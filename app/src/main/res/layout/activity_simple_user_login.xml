<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".simple_user_login">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Welcome "
        android:textColor="@drawable/common_google_signin_btn_text_dark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/user_info_paid"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="You have paid: "
        android:textColor="@drawable/common_google_signin_btn_text_dark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/user_info_needtopay"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:text="You have left to pay: "
        android:textColor="@drawable/common_google_signin_btn_text_dark"
        android:textSize="30dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="81dp" />

</LinearLayout>